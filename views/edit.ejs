<body>
    <form action="/<%= store._id %>?_method=POST" method="POST">
        Image URL: <input type="text" name="image_url" value="<%= store.image_url %>" size="50" /><br>
        Descritpion: <br><textarea type="text" name="description" cols='50' rows='10'><%= store.description %></textarea> /><br>
        Title: <input type="text" name="title" value="<%= store.title %>" size="50"/><br>
        Sizes: <input type="text" name="sizes" value="<%= store.sizes %>" size="10"/><br>
        Price: <input type="text" name="price" value="<%= store.price %>" size="5"/>
        <input type="submit" value="submit" />
    </form>
</body>
